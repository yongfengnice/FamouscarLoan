<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/home_radio_button_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="#D7D7D7"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/home_tab_car_btn"
            style="@style/home_tab_bottom"
            android:checked="true"
            android:text="投资列表" />

        <RadioButton
            android:id="@+id/home_tab_xue_btn"
            style="@style/home_tab_bottom"
            android:layout_marginLeft="1dp"
            android:text="@string/home_item_xue"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/home_tab_house_btn"
            style="@style/home_tab_bottom"
            android:layout_marginLeft="1dp"
            android:text="@string/home_item_house" 
            android:visibility="gone"/>
    </RadioGroup>
    
    <LinearLayout android:id="@+id/home_tab_liLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>